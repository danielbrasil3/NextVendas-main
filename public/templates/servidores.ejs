<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NextVendas Servidores</title>
    <!-- Inclusão do Bootstrap e arquivo CSS-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/css/styleservidores.css" />
  </head>
  <body>
    <!-- Container principal -->
    <div class="container-fluid">
      <div class="row p-4">
        <!-- Menu lateral -->
        <aside class="col-md-3 col-lg-2 p-0 rounded-2">
          <nav>
            <div class="sidebar">
              <!-- Logo -->
              <div class="logo m-3 text-center">
                <a href="/" class="no-link"><h1>NextVendas</h1></a>
              </div>
              <!-- Itens do Menu -->
              <ul class="nav flex-column m-3">
                <li class="nav-item">
                  <a
                    class="nav-link d-flex align-items-center active"
                    href="/dashboard"
                  >
                    <ion-icon
                      class="icon me-2 rounded-2 p-2"
                      name="home"
                    ></ion-icon>
                    Dashboard
                  </a>
                </li>
                <li class="nav-item">
                  <a
                    class="nav-link d-flex align-items-center"
                    href="/dashboard/servidores"
                  >
                    <ion-icon
                      class="icon me-2 rounded-2 p-2"
                      name="stats-chart"
                    ></ion-icon>
                    Servidores
                  </a>
                </li>
                <li class="nav-item">
                  <a
                    class="nav-link d-flex align-items-center"
                    href="/dashboard/historico">
                    <ion-icon
                      class="icon me-2 rounded-2 p-2"
                      name="receipt"
                    ></ion-icon>
                    Histórico
                  </a>
                </li>
                <li class="nav-item">
                  <a
                    class="nav-link d-flex align-items-center"
                    href="/dashboard/layouts"
                  >
                    <ion-icon
                      class="icon me-2 rounded-2 p-2"
                      name="bag-handle"
                    ></ion-icon>
                    Layouts
                  </a>
                </li>
                <li class="nav-item">
                  <a
                    class="nav-link d-flex align-items-center"
                    href="/dashboard/pagamento"
                  >
                    <ion-icon
                      class="icon me-2 rounded-2 p-2"
                      name="qr-code-sharp"
                    ></ion-icon>
                    Pagamento
                  </a>
                </li>
                <h3 class="my-3">Chaves</h3>
                <li class="nav-item">
                  <a
                    class="nav-link d-flex align-items-center"
                    href="#perfil"
                  >
                    <ion-icon
                      class="icon me-2 rounded-2 p-2"
                      name="person"
                    ></ion-icon>
                    Perfil
                  </a>
                </li>
                <li class="nav-item">
                  <a
                    class="nav-link d-flex align-items-center"
                    href="/dashboard/sair"
                  >
                    <ion-icon
                      class="icon me-2 rounded-2 p-2"
                      name="power"
                    ></ion-icon>
                    Sair
                  </a>
                </li>
              </ul>
            </div>
          </nav>
        </aside>

        <!-- Conteúdo principal -->
        <main class="col-md-9 col-lg-10">

          <!-- Cabeçalho -->
          <header class="topo d-flex flex-column justify-content-evenly py-2">
            <h1 class="ms-4">Selecione o servidor:</h1>
          </header>
          <section class="card d-flex justify-content-center ms-4 p-2">
            <!-- Lista de servidores -->
            <% if(dataServerUser.length > 0) { %>
              <div class="row justify-content-center">
                <% if (Array.isArray(dataServerUser) && dataServerUser.length > 0) { %>
                  <% dataServerUser.forEach((item, index) => { %>
                    <a href="<%= item.link %>" class="col-12 col-md-6 col-lg-4 d-flex flex-column align-items-center my-2 text-decoration-none bg-dark text-white p-3 rounded">
                      <span><%= item.name %></span>
                      <div class="circulo rounded-circle ms-4">
                        <img src="<%= item.icon %>" alt="Avatar" class="avatar-img">
                      </div>
                      <span><%= item.description %></span>
                    </a>
                  <% }); %>
                <% } else if (dataServerUser) { %>
                  <a href="/dashboard/servidor/<%=dataServerUser.id%>" class="col-12 col-md-6 col-lg-4 d-flex flex-column align-items-center my-2 text-decoration-none bg-dark text-white p-3 rounded">
                    <span><%= dataServerUser.name %></span>
                    <div class="circulo rounded-circle ms-4">
                      <img src="<%= dataServerUser.icon %>" alt="Avatar" class="avatar-img">
                    </div>
                    <span><%= dataServerUser.description %></span>
                  </a>
                <% } %>
              </div>
            <% } %>
            <!-- Botão para adicionar em um servidor -->
            <div class="col-12 d-flex align-items-center justify-content-center my-2">
              <a
                id="button"
                class="col-3 rounded-2 p-2 d-flex justify-content-center"
                href="https://discord.com/oauth2/authorize?client_id=1261399944833667202&permissions=8&response_type=code&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Fapi%2Fv1%2Fdiscord%2Fauth%2Fguilds&integration_type=0&scope=bot+identify+guilds.join"
              >Me adicione</a>
            </div>
          </section>                      
        </main>
      </div>
    </div>

    <!-- Scripts necessários-->
    <script src="/public/js/servidores.js"></script>
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
